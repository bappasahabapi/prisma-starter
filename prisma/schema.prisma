// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//todo: make the User Model
model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
  role  String
}

//todo: make the Profile Model
model Profile {
  id     Int    @id @default(autoincrement())
  bio    String
  userId Int
}

//todo: make the Catagory Model
model Catagory {
  id   Int    @id @default(autoincrement())
  name String
}
//todo: make the Post Model
model Post {
  id   Int    @id @default(autoincrement())
  title String
  authorId Int
  catagoryId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
