// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String
  role    String
  profile Profile?
  posts   Post[]

  @@map("users")
}

//todo: make relationship btn profiles and users[one to one]

model Profile {
  id     Int    @id @default(autoincrement())
  bio    String
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id])

  @@map("profiles")
}

model Catagory {
  id   Int    @id @default(autoincrement())
  name String
  posts Post[]

  @@map("catagories")
}

//todo: make relationship btn users and posts[one to many]

model Post {
  id         Int      @id @default(autoincrement())
  title      String
  authorId   Int
  author     User     @relation(fields: [authorId], references: [id])
  catagoryId Int
  catagory   Catagory @relation(fields: [catagoryId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("posts")
}
